@using MammasTiffin.Web.CustomHelpers
@model MammasTiffin.Web.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "formLogin", enctype = "multipart / form - data" }))
{
    @Html.AntiForgeryToken()
    <div class="loginWrapper">
        <div class="container">
            <div class="row">
                <div class="bigTitle text-center">Login</div>
                <div class="row">@Html.ValidationSummary()</div>
            </div>
            <div class="formContainer">
                <div class="row">
                    <div class="col-md-offset-3 col-md-3">
                        @Html.LabelFor(x => x.Email)
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-3 col-md-3">
                        @Html.LabelFor(x => x.Password)
                    </div>
                    <div class="col-md-3">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-3 col-md-6 text-center">
                    @Html.CusButton("btnLogin", "Login", true, new { @class = "" })
                </div>
            </div>
        </div>
    </div>
}
